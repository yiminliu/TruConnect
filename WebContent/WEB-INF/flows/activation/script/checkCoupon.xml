<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

  <input name="coupon" type="com.trc.payment.coupon.Coupon" />

  <action-state id="fetchCoupon">
    <evaluate expression="couponFlowManager.getCouponByCode(coupon)" result="flowScope.fetchedCoupon" />
    <transition on="success" to="isCoupon">
      <evaluate expression="couponFlowManager.setCoupon(coupon, fetchedCoupon)" />
    </transition>
  </action-state>

  <decision-state id="isCoupon">
    <if test="couponFlowManager.hasCoupon(coupon)" then="isCouponPayment" else="noCoupon" />
  </decision-state>

  <decision-state id="isCouponPayment">
    <if test="couponFlowManager.isCouponPayment(coupon)" then="hasCouponPayment" else="hasRecurringCoupon" />
  </decision-state>

  <!-- End States -->
  <end-state id="generalError" view="exception/uncaughtException" />
  <end-state id="hasCouponPayment">
    <on-entry>
      <evaluate expression="activationLogger.startState(actStateFactory.HAS_COUPON_PAYMENT)" />
      <evaluate expression="activationLogger.endState()" />
    </on-entry>
  </end-state>
  <end-state id="hasRecurringCoupon">
    <on-entry>
      <evaluate expression="activationLogger.startState(actStateFactory.HAS_RECURRING_COUPON)" />
      <evaluate expression="activationLogger.endState()" />
    </on-entry>
  </end-state>
  <end-state id="noCoupon" />

  <!-- Global Transitions -->
  <global-transitions>
    <transition on-exception="java.lang.Exception" to="generalError" />
  </global-transitions>

</flow>