<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:jee="http://www.springframework.org/schema/jee"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

  <jee:jndi-lookup id="dataSource" jndi-name="jdbc/TrcMySql" />
  <!-- <jee:jndi-lookup id="dataSourceTSCPMVNE" jndi-name="jdbc/TSCPMVNE" />-->

  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
    <property name="dataSource" ref="dataSource" />
    <property name="annotatedClasses">
      <list>
        <value>com.trc.util.logger.activation.ActivationStateId</value>
        <value>com.trc.util.logger.activation.ActivationMap</value>
        <value>com.trc.util.logger.activation.ActivationState</value>
        <value>com.trc.user.User</value>
        <value>com.trc.user.authority.Authority</value>
        <value>com.trc.user.security.SecurityQuestion</value>
        <value>com.trc.coupon.Coupon</value>
        <value>com.trc.coupon.CouponDetail</value>
        <value>com.trc.coupon.contract.Contract</value>
        <value>com.trc.coupon.UserCoupon</value>
        <value>com.trc.coupon.UserCouponId</value>
        <value>com.trc.coupon.CouponStackable</value>
        <value>com.trc.coupon.CouponStackableId</value>
        <value>com.trc.coupon.CouponDetailType</value>
        <value>com.trc.domain.ticket.Ticket</value>
        <value>com.trc.domain.ticket.TicketStatus</value>
        <value>com.trc.domain.ticket.TicketCategory</value>
        <value>com.trc.domain.ticket.TicketNote</value>     
        <value>com.trc.domain.ticket.TicketType</value>    
        <value>com.trc.domain.support.notification.NotificationSchedule</value>
        <value>com.trc.domain.support.notification.NotificationMessage</value>
        <value>com.trc.domain.support.notification.NotificationPage</value>
        <value>com.trc.domain.support.notification.NotificationDateTime</value> 
        <value>com.trc.domain.support.knowledgebase.Article</value>
        <value>com.trc.domain.support.knowledgebase.ArticleData</value>
        <value>com.trc.domain.support.knowledgebase.ArticleLink</value>
        <value>com.trc.domain.support.knowledgebase.Category</value> 
        <value>com.trc.domain.support.knowledgebase.ArticleCategoryMap</value>        
        <!-- <value>com.trc.user.authority.ROLE</value>-->
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
        <prop key="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</prop>
        <prop key="hibernate.show_sql">true</prop>
        <prop key="hibernate.format_sql">true</prop>
        <prop key="hibernate.use_sql_comments">${hibernate.use_sql_comments}</prop>
        <prop key="hibernate.current_session_context_class">thread</prop>
        <prop key="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</prop>
        <!-- <prop key="hibernate.id.new_generator_mappings">true</prop> -->
      </props>
    </property>
  </bean>

